{
  "name": "payload-db-json",
  "version": "1.0.0",
  "description": "JSON Database Adapter for Payload CMS - Fast, lightweight, file-based storage solution with encryption, caching, and CLI tools",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "payload-db-json": "dist/cli/index.js"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky install",
    "prepublishOnly": "npm run prepare-release",
    "cli:build": "tsc src/cli/index.ts --outDir dist/cli --target ES2020 --module commonjs",
    "cli:dev": "ts-node src/cli/index.ts",
    "prepare-release": "node scripts/prepare-release.js"
  },
  "keywords": [
    "payload",
    "payload-cms",
    "database",
    "json",
    "adapter",
    "file-based",
    "typescript",
    "encryption",
    "caching",
    "cli",
    "serverless",
    "lightweight",
    "fast",
    "storage"
  ],
  "author": "Payload JSON DB Team",
  "license": "MIT",
  "homepage": "https://github.com/payload-json-db/payload-db-json#readme",
  "bugs": {
    "url": "https://github.com/payload-json-db/payload-db-json/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/payload-json-db/payload-db-json.git"
  },
  "peerDependencies": {
    "payload": ">=2.0.0 || ^3.0.0",
    "next": ">=13.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0 || ^20.0.0 || ^22.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0 || ^7.0.0 || ^8.0.0",
    "@typescript-eslint/parser": "^6.0.0 || ^7.0.0 || ^8.0.0",
    "eslint": "^8.0.0 || ^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0 || ^9.0.0",
    "jest": "^29.0.0",
    "payload": "^3.53.0",
    "prettier": "^3.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
